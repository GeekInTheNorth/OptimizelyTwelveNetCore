@using EPiServer.Shell.Navigation

@model Stott.Optimizely.RobotsHandler.UI.ViewModels.RobotsAdminViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Content Security Policy Management</title>
    @Html.CreatePlatformNavigationMenu()
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        body {
            margin: 0;
            padding: 0;
        }

        div.admin-container {
            display: inline-block;
            margin-top: 60px;
            padding: 10px;
        }
    </style>
</head>
<body>
    <div class="container admin-container">
        <div class="row">
            <div class="col">
                <h1>
                    Robots.txt Management
                </h1>

                <ul class="nav nav-tabs">
                    @foreach (var site in Model.Sites)
                    {
                        var actionClass = site.SiteId.Equals(Model.CurrentSiteId) ? "nav-link active" : "nav-link";
                        <li class="nav-item">
                            @Html.ActionLink(site.SiteName, "Admin", "Robots", new { siteId = site.SiteId }, new { @class = actionClass })
                        </li>
                    }
                </ul>

                <form asp-controller="Robots" asp-action="Admin" method="post" class="mt-2">
                    @Html.HiddenFor(x => x.CurrentSiteId)
                    @Html.HiddenFor(x => x.CurrentSiteName)

                    <div class="mb-3">
                        @Html.LabelFor(x => x.CurrentRobotsContent, "Robots.txt Content", new { @class = "form-label" })
                        @Html.TextAreaFor(x => x.CurrentRobotsContent, 10, 60, new { @class = "form-control" })
                    </div>

                    <div class="mb-3">
                        <input type="submit" value="Submit" class="form-control" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    @*<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>*@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
</body>
</html>
